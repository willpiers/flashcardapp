<h1>Listing memberships</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Group</th>
    <th></th>
    <th></th>
  </tr>

<% @memberships.each do |membership| %>
  <tr>
    <td><%= membership.person.name %></td>
    <td><%= membership.group.name %></td>
    <td><%= link_to 'Edit', edit_person_path(membership) %></td>
    <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

