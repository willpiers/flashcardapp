<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @person.name %>
</p>

<p>
  <b>Twitter:</b>
  <%= @person.twitter %>
</p>

<p>
  <%= image_tag @person.photo_url, width: 200 %>
</p>
<% unless @person.groups.blank? %>
<p>
  <b>Groups:</b>
  <% @person.groups.each do |group| %>
  		<p>
  			<%= link_to "#{group.name}", group %> ||
  			<%= link_to "Destroy Membership", group.memberships.find_by_person_id(@person.id), method: 'delete' %>
  		</p>
  <% end %>
</p>
<% end %>


<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
